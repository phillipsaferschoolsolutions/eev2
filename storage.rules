rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload and read files in photo_bank
    match /photo_bank/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to upload and read files in assignment_uploads
    match /assignment_uploads/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to upload and read files in chat_uploads
    match /chat_uploads/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to upload and read files in resources
    match /resources/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Default rule for other paths - more restrictive
    match /{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid != null;
    }
  }
}